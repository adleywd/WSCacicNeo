<metal:main use-macro="load: ../basic/master.pt">
    <metal:content fill-slot="dash">
      Lista de Atividades
    </metal:content>
	<metal:content fill-slot="conteudo">
        <div class="matter">
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <div class="widget">
                            <div class="widget-head">
                                <div class="pull-left">Órgãos</div>
                                    <div class="clearfix"></div>
                                    </div>
                                    <div class="widget-content">
                                        <div class="padd">
                                            <div class="page-tables">
                                                <div class="table-responsive">
                                                    <table cellpadding="0" cellspacing="0" border="0" id="data-table" width="100%">
                                                        <thead>
                                                            <tr>
                                                                <th>Tipo</th>
                                                                <th>usuario</th>
                                                                <th>descricao</th>
                                                                <th>data</th>
                                                            </tr>
                                                        </thead>
                                                        <tbody>
                                                            <tr tal:repeat="doc data">
                                                                <td>${doc.tipo}</td>
                                                                <td>${doc.usuario}</td>
                                                                <td>${doc.descricao}</td>
                                                                <td>${doc.data}</td>
                                                            </tr>
                                                        </tbody>
                                                    </table>
                                                    <div class="clearfix"></div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    <div class="widget-foot">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
    </metal:content>
</metal:main>
