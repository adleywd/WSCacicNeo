<metal:main use-macro="load: ../basic/master.pt">
    <metal:content fill-slot="dash">
      Lista de Itens Removidos
    </metal:content>
	<metal:content fill-slot="conteudo">
        <div class="matter">
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <div class="widget">
                            <div class="widget-head">
                                <div class="pull-left">Itens Removidos</div>
                                 <div class="pull-right"><a href="#"><span class="fa fa-plus"></span> Adicionar Item</a></div>
                                    <div class="clearfix"></div>
                                    </div>
                                    <div class="widget-content">
                                        <div class="padd">
                                            <div class="page-tables">
                                                <div class="table-responsive">
                                                    <table cellpadding="0" cellspacing="0" border="0" id="data-table">
                                                        <thead>
                                                            <tr>
                                                                <th>Nome</th>
                                                                <th>Opções</th>
                                                            </tr>
                                                        </thead>
                                                        <tbody>
                                                            <tr tal:repeat="doc blacklist_doc">
                                                                <td>${doc.item}</td>
                                                                <td width="10%">
                                                                    <a href="#" class="btn btn-xs btn-danger" id="add_item"><i class="fa fa-minus-square" title="Remover o item ${doc.item}" ></i></a
                                                                </td>
                                                            </tr>
                                                        </tbody>
                                                    </table>
                                                    <div class="clearfix"></div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    <div class="widget-foot">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
    </metal:content>
    <metal:content fill-slot="javascript">
    </metal:content>
</metal:main>
