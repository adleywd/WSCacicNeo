<metal:main use-macro="load: ../basic/master.pt">
    <metal:content fill-slot="dash">
      Lista de Itens Removidos
    </metal:content>
	<metal:content fill-slot="conteudo">
        <div class="matter">
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <div class="widget">
                            <div class="widget-head">
                                <div class="pull-left">Itens Removidos</div>
                                 <div class="pull-right"><a href="${request.route_url('conf_report')}"><span class="fa fa-plus"></span> Adicionar Item</a></div>
                                    <div class="clearfix"></div>
                                    </div>
                                    <div class="widget-content">
                                        <div class="padd">
                                            <div class="page-tables">
                                                <div class="table-responsive">
                                                    <table cellpadding="0" cellspacing="0" border="0" id="data-table">
                                                        <thead>
                                                            <tr>
                                                                <th>Nome</th>
                                                                <th>Opções</th>
                                                            </tr>
                                                        </thead>
                                                        <tbody>
                                                            <tr tal:repeat="doc blacklist_doc">
                                                                <td>${doc.item}</td>
                                                                <td width="10%">
                                                                    <a id="confirm_${doc.item}" class="btn btn-xs btn-danger" onclick="confirm_delete('${doc.item}')" title="Remover o item ${doc.item}"><i class="fa fa-minus-square"></i></a>
                                                                </td>
                                                            </tr>
                                                        </tbody>
                                                    </table>
                                                    <div class="clearfix"></div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    <div class="widget-foot">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
    </metal:content>
    <metal:content fill-slot="javascript">
        <script type="text/javascript">
            function confirm_delete(item) {
               var answer = confirm("Deseja excluir o item "+item+" da lista de remoção?")
                if (answer == true){
                    x = window.location.href = '${request.route_url('root')}blacklist/delete/'+item;
                }
            }
        </script>
    </metal:content>
</metal:main>
