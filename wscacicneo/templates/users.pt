<metal:main use-macro="load: master.pt">
	<metal:content fill-slot="conteudo">
        <div class="padd">
            <br />
            <!-- Form starts.  -->
             <form class="form-horizontal" role="form">
                <div class="form-group">
                  <label class="col-lg-2 control-label">Nome</label>
                  <div class="col-lg-5">
                    <input type="text" id="nome" class="form-control" placeholder="Nome do Usuário">
                  </div>
                </div>
                <div class="form-group">
                    <label class="col-lg-2 control-label">Matricula</label>
                        <div class="col-lg-5">
                        <input type="text" id="matricula"  class="form-control" placeholder="Matricula">
                  </div>
                </div>
                <div class="form-group">
                    <label class="col-lg-2 control-label">E-Mail</label>
                        <div class="col-lg-5">
                        <input type="text" id="email" class="form-control" placeholder="E-Mail">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-lg-2 control-label">Telefone</label>
                        <div class="col-lg-5">
                        <input type="text" id="telefone" class="form-control" placeholder="E-Mail">
                    </div>
                </div>
                <div class="form-group">
                  <label class="col-lg-2 control-label">Orgão</label>
                  <div class="col-lg-5">
                    <input type="text" id="orgao" class="form-control" placeholder="Orgão">
                  </div>
                </div>
                <div class="form-group">
                    <label class="col-lg-2 control-label">Cargo</label>
                        <div class="col-lg-5">
                        <input type="text" id="cargo" class="form-control" placeholder="Cargo">
                  </div>
                </div>
                <div class="form-group">
                    <label class="col-lg-2 control-label">Setor</label>
                        <div class="col-lg-5">
                        <input type="text" id="setor" class="form-control" placeholder="Setor">
                    </div>
                </div>
                <div class="form-group">
                  <label class="col-lg-2 control-label">Permissão</label>
                  <div class="col-lg-2">
                    <select id="permissao" class="form-control">
                      <option selected disabled>Permissões</option>
                      <option>Administrador</option>
                      <option>Gestor</option>
                    </select>
                  </div>
                </div>
                <div class="form-group">
                  <div class="col-lg-offset-2 col-lg-6">
                    <button type="button" id="enviar" class="btn btn-sm" style="margin-left: 315px;" >Enviar</button>
                    <button type="button" id="limpar" class="btn btn-sm">Limpar</button>
                  </div>
                </div>
              </form>
          </div>
	</metal:content>
	<metal:content fill-slot="javascript">
        <script type="text/javascript">
           $('#enviar').click(function(){
                var data = {
                    'nome' : $('#nome').val(),
                    'matricula' : $('#matricula').val(),
                    'email' : $('#email').val(),
                    'telefone' : $('#telefone').val(),
                    'orgao' : $('#orgao').val(),
                    'cargo' : $('#cargo').val(),
                    'setor' : $('#setor').val(),
                    'permissao' : $('#permissao').val(),
                }
                $.ajax({
                    type: "POST",
                    url: "post_user",
                    data: data, 
                    success: function(){ alert('sucesso') },
                    error: function(){ alert('erro') },
                }); 
            });
        </script>
    </metal:content>
</metal:main>
