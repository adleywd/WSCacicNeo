<metal:main use-macro="load: master.pt">
	<metal:content fill-slot="dash">
		Início
	</metal:content>
	<metal:content fill-slot="conteudo">
		<!-- Não Autenticado -->
		<div tal:condition="not request.authenticated_userid">
			<p><h2 align="center">Sistema Super-Gerente</h2></p>
			<br>
				<p>
					<h3 style="text-align:center;"><span class="fa fa-user fa-2x"></span><a href="${request.route_url('root')}login">  Já é usuário? Autentique-se. </a></h3>
				</p>
				<br/>
				<p>
					<h3 style="text-align:center;"><span class="fa fa-file-text fa-2x"></span><a href="${request.route_url('root')}relatorios/configuracao"> Veja os relatórios disponíveis. </a></h3>
				</p>
			</div>
		<br/>
		<hr/>
		<div>
			<metal:macro use-macro="load: generic_report.pt"></metal:macro>
		</div>
			<!-- Fim Não Autenticado -->
			<div tal:condition="request.authenticated_userid" style="text-align: center;">
				<!-- Administrador -->
				<div tal:condition="usuario_autenticado.results[0].permissao =='Administrador' ">
						<metal:macro use-macro="load: home_administrador.pt">
				</div>
				<!-- Fim Administrador -->
			<!-- Gestor -->
				<div tal:condition="usuario_autenticado.results[0].permissao =='Gestor' ">
						<metal:macro use-macro="load: home_gestor.pt">
				</div>
				<!-- Fim Gestor -->
			</div>

			</metal:content>
		</metal:main>