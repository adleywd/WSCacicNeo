<metal:main use-macro="load: master.pt">
  <metal:content fill-slot="dash">
      Alterar Perfil
  </metal:content>
  <metal:content fill-slot="conteudo">
        <div class="padd">
            <br />
            <!-- Form starts.  -->
             <form id="form_editaruser" class="form-horizontal" role="form">
                <div class="form-group">
                  <label class="col-lg-2 control-label">Nome</label>
                  <div class="col-lg-5">
                    <input type="text" id="nome" value="${nome}" class="form-control" placeholder="Nome do Usuário">
                  </div>
                </div>
                <div class="form-group">
                    <label class="col-lg-2 control-label">Matricula</label>
                        <div class="col-lg-5">
                        <input type="text" id="matricula" disabled value="${matricula}"  class="form-control" placeholder="Matricula">
                  </div>
                </div>
                <div class="form-group">
                    <label class="col-lg-2 control-label">E-Mail</label>
                        <div class="col-lg-5">
                        <input type="text" id="email" value="${email}" class="form-control" placeholder="E-Mail">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-lg-2 control-label">Telefone</label>
                        <div class="col-lg-5">
                        <input type="text" id="telefone" value="${telefone}" class="form-control" placeholder="Telefone">
                    </div>
                </div>
                <div class="form-group">
                  <label class="col-lg-2 control-label">Orgão</label>
                  <div class="col-lg-5">
                    <input type="text" id="orgao" value="${orgao}" class="form-control" placeholder="Orgão">
                  </div>
                </div>
                <div class="form-group">
                    <label class="col-lg-2 control-label">Cargo</label>
                        <div class="col-lg-5">
                        <input type="text" id="cargo" value="${cargo}" class="form-control" placeholder="Cargo">
                  </div>
                </div>
                <div class="form-group">
                    <label class="col-lg-2 control-label">Setor</label>
                        <div class="col-lg-5">
                        <input type="text" id="setor" value="${setor}" class="form-control" placeholder="Setor">
                    </div>
                </div>
                <div class="form-group">
                  <label class="col-lg-2 control-label">Permissão</label>
                  <div class="col-lg-2">
                    <select disabled id="permissao" class="form-control">
                      <option selected>${permissao}</option>
                    </select>
                  </div>
                </div>
                <div class="form-group">
                  <div class="col-lg-offset-2 col-lg-6">
                    <button type="button" id="enviar" class="btn btn-sm" style="margin-left: 315px;" >Enviar</button>
                    <input style="display:none;" id="url" value="${request.matchdict['matricula']}">
                    <button type="button" id="limpar" class="btn btn-sm">Limpar</button>
                  </div>
                </div>
              </form>
          </div>
  </metal:content>
  <metal:content fill-slot="javascript">
        <script type="text/javascript">
           $('#limpar').click(function(){
                    $('#nome').val('')
                    $('#telefone').val('')
                    $('#orgao').val('')
                    $('#cargo').val('')
                    $('#setor').val('')
           });
           $('#enviar').click(function(){
                var nome = $('#nome').val()
                    matricula = $('#matricula').val()
                    email = $('#email').val()
                    telefone = $('#telefone').val()
                    orgao = $('#orgao').val()
                    cargo = $('#cargo').val()
                    setor = $('#setor').val()
                    permissao = $('#permissao').val()
                    url = $('#url').val()
    
                var data = {
                    'url': url,
                    'nome': nome,
                    'matricula': matricula,
                    'email': email,
                    'telefone': telefone,
                    'orgao': orgao,
                    'cargo': cargo,
                    'setor': setor,
                    'permissao': permissao,
                }
                  $.ajax({
                      type: "PUT",
                      url: "${request.route_url('root')}put_profile_user",
                      data: data, 
                      success: function(){ alert('Alteração realizada com sucesso'), window.location.href = "${request.route_url('home')}"; },
                      error: function(){ alert('Erro ao Alterar do usuário. Todos os campos são obrigatórios') },
                  });
            });
        </script>
    </metal:content>
</metal:main>
