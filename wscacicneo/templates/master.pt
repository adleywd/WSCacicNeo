<metal:main use-macro="load: blankmaster.pt">
	<metal:content fill-slot="head">
		<metal:content define-slot="head"/>
	</metal:content>

	<metal:content fill-slot="css">
		<metal:content define-slot="css"/>
	</metal:content>

	

	<!-- Conteúdo da Página -->
	<metal:content fill-slot="conteudo">
		<div class="navbar navbar-fixed-top bs-docs-nav" role="banner">

			<div class="conjtainer">
				<!-- Menu button for smallar screens -->
				<div class="navbar-header">
					<button class="navbar-toggle btn-navbar" type="button" data-toggle="collapse" data-target=".bs-navbar-collapse">
						<span>Menu</span>
					</button>
					<!-- Site name for smallar screens -->
					<a href="index.html" class="navbar-brand hidden-lg">Super-Gerente</a>
				</div>
				<!--  Navigation starts -->
				<nav class="collapse navbar-collapse bs-navbar-collapse" role="navigation">         
					<!-- Links -->
						<ul class="nav navbar-nav pull-right" tal:condition="request.authenticated_userid">
							<li class="dropdown pull-right">            
								<a data-toggle="dropdown" class="dropdown-toggle" href="#">
									<i class="fa fa-user"></i> 
										${usuario_autenticado.results[0].nome}
									<b class="caret"></b>              
								</a>
								<!-- Dropdown menu -->
								<ul class="dropdown-menu">
									<li><a href="${request.route_url('root')}usuario/perfil/${usuario_autenticado.results[0].matricula}">
										<i class="fa fa-user"></i> Alterar Perfil</a></li>
									<li><a href="${request.route_url('root')}usuario/perfil/senha/${usuario_autenticado.results[0].matricula}">
										<i class="fa fa-cogs"></i> Alterar Senha</a></li>
									<li><a href="${request.route_url('root')}logout"><i class="fa fa-sign-out"></i> Logout</a></li>
								</ul>
							</li>
						</ul>

					<!-- Links -->
						<ul class="nav navbar-nav pull-right">
							<li class=" pull-right">            
								<a tal:condition="not request.authenticated_userid" href="${request.route_url('root')}login">
									<i class="fa fa-user"></i> 
											Login 
								</a>
							</li>
						</ul>


						<!-- Search form -->
						<form class="navbar-form navbar-right" role="search">
							<div class="form-group">
								<input type="text" class="form-control" placeholder="Buscar">
							</div>
						</form>
					</nav>

				</div>
			</div>
			<!-- Header starts -->
			<header>
				<div class="container">
					<div class="row">
						<!-- Logo section -->
						<div class="col-md-4">
							<!-- Logo. -->
							<div class="logo">
								<h1><a href="${request.route_url('root')}home"><img src="${request.route_url('root')}static/caciclogo_transparent.png"> </a>
								<a href="${request.route_url('root')}home">Super<span class="bold">Gerente</span></a></h1>
							</div>
							<!-- Logo ends -->
						</div>
						<!-- Button section -->
											</div>
				</div>
			</header>

			<!-- Header ends -->

			<!-- Main content starts -->

			<div class="content">

				<!-- Sidebar -->
				<metal:macro use-macro="load: menu.pt">

					<!--- Sidebar navigation -->
					<!-- If the main navigation has sub navigation, then add the class "has_sub" to "li" of main navigation. -->
					
					<!-- Sidebar ends -->

					<!-- Main bar -->
					<div class="mainbar">

						<!-- Page heading -->
						<div class="page-head">
							<h2 class="pull-left">
							<i class="fa fa-home"></i>&nbsp;
							</h2>
							<h2 class="pull-left" id="dashlocation">
								<metal:content define-slot="dash"/>
							</h2>


							<div class="clearfix"></div>

						</div>
						<!-- Page heading ends -->

						<!-- Define Slot do Conteúdo -->
						<div class="metter">
							<metal:content define-slot="conteudo" />
						</div>
					</div>
				</div>
				<!-- Footer starts -->
				<footer>
					<div class="container">
						<div class="row">
							<div class="col-md-12">
								<!-- Copyright info -->
								<p class="copy">Copyright © 2014 | <a href="#">Super-Gerente</a> </p>
							</div>
						</div>
					</div>
				</footer>
				<!-- Footer ends -->

			</metal:content>
			<metal:content fill-slot="javascript">
				<metal:content define-slot="javascript"/>
			</metal:content>
		</metal:main>