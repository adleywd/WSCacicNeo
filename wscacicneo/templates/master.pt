		<div class="sidebar">
			<metal:content use-macro="load: menu.pt">
				<metal:content define-slot="cabecalho"/>
			</metal:content>
		</div>

		<!-- Main bar -->
		<div class="mainbar">

			<!-- Page heading -->
			<div class="page-head">
				<h2 class="pull-left"><i class="fa fa-home"></i> Dashboard</h2>
