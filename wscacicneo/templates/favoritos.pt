<metal:main use-macro="load: master.pt">
	<metal:content fill-slot="conteudo">
        <div class="col-md-4" style="margin-left: 200px;">
              <div class="widget">
                <div class="widget-head">
                  <div class="pull-left">Editar</div>
                  <div class="widget-icons pull-right">
                    <a href="#" class="wminimize"><i class="fa fa-chevron-up"></i></a>
                  </div>
                  <div class="clearfix"></div>
                </div>
                <div class="widget-content">
                  <div class="padd">
                    <!-- Visitors, pageview, bounce rate, etc., Sparklines plugin used -->
                    <ul tal:repeat="i itens" id='favoritos-off' class="current-status">
                        <li>
                            <label class="checkbox-inline">
                                <a id="${i}">${i}</a>
                            </label>
                        </li>
                    </ul>
                  </div>
                </div>
              </div>
            </div>
            <div class="col-md-4">
              <div class="widget">
                <div class="widget-head">
                  <div class="pull-left">Favoritos</div>
                  <div class="widget-icons pull-right">
                    <a href="#" class="wminimize"><i class="fa fa-chevron-up"></i></a>
                  </div>
                  <div class="clearfix"></div>
                </div>
                <div class="widget-content">
                  <div class="padd">
                    <!-- Visitors, pageview, bounce rate, etc., Sparklines plugin used -->
                    <ul tal:repeat="doc favoritos" id="favoritos-on" class="current-status">
                        <li>
                            <label class="checkbox-inline">
                                <a id="${doc}">${doc}</a>
                            </label>
                        </li>
                    </ul>
                  </div>
                </div>
              </div>
            <button type="button" class="btn btn-sm btn-default">Salvar</button>
            </div>
            <input style="display:none;" id="matricula" value="${request.matchdict['matricula']}">
    </metal:content>
	<metal:content fill-slot="javascript">
        <script type="text/javascript">
            $('a').click(function(){
                value = $(this).html()
                label = $(this).parent()
                li = $(label).parent()
                ul = $(li).parent()
                id_ul = $(ul).attr('id')
                if(id_ul == 'favoritos-off'){
                    matricula = $('#matricula').html()
                    var data = {
                        'value': value,
                        'path': 'favoritos',
                        'matricula': $('#matricula').val()
                    }
                    $.ajax({
                        type: "PUT",
                        url: "${request.route_url('root')}edit_favoritos",
                        data: data, 
                        success: function(){ location.reload(); },
                        error: function(){ alert('NÃ£o foi desta vez Tente novamente mais tarde') },
                    });
                }
                else if(id_ul == 'favoritos-on'){
                    alert(value)
                }
                else{
                    return true
                }
            });
        </script>
    </metal:content>
</metal:main>
