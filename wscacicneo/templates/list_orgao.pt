<metal:main use-macro="load: master.pt">
	<metal:content fill-slot="conteudo">
        <div class="matter">
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <div class="widget">
                            <div class="widget-head">
                                <div class="pull-left">Data Tables</div>
                                    <div class="widget-icons pull-right">
                                        <a href="#" class="wminimize"><i class="fa fa-chevron-up"></i></a> 
                                            <a href="#" class="wclose"><i class="fa fa-times"></i></a>
                                    </div>
                                    <div class="clearfix"></div>
                                    </div>
                                    <div class="widget-content">
                                        <div class="padd">
                                            <div class="page-tables">
                                                <div class="table-responsive">
                                                    <table cellpadding="0" cellspacing="0" border="0" id="data-table" width="100%">
                                                        <thead>
                                                            <tr>
                                                                <th>Nome</th>
                                                                <th>Sigla</th>
                                                                <th>Coleta</th>
                                                                <th>Endereço</th>
                                                                <th>E-mail</th>
                                                                <th>Opções</th>
                                                            </tr>
                                                        </thead>
                                                        <tbody>
                                                            <tr tal:repeat="doc orgao_doc">
                                                                <td>${doc.nome}</td>
                                                                <td>${doc.sigla}</td>
                                                                <td>${doc.coleta}</td>
                                                                <td>${doc.endereco}</td>
                                                                <td>${doc.email}</td>
                                                                <td>
                                                                    <a class="btn btn-xs btn-success"><i class="fa fa-check"></i></a>
                                                                    <a href="${request.route_url('root')}orgao/editar/${doc.sigla}" class="btn btn-xs btn-warning"><i class="fa fa-pencil"></i></a>
                                                                    <a href="${request.route_url('root')}orgao/delete/${doc.sigla}" class="btn btn-xs btn-danger"><i class="fa fa-times"></i></a>
                                                                </td>
                                                            </tr>
                                                        </tbody>
                                                    </table>
                                                    <div class="clearfix"></div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    <div class="widget-foot">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
    </metal:content>
	<metal:content fill-slot="javascript">
        <script type="text/javascript">
        });
        </script>
    </metal:content>
</metal:main>
