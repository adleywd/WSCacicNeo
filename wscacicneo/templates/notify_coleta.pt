<metal:main use-macro="load: master.pt">
    <metal:content fill-slot="conteudo">
        <div class="widget wgreen">
            <div class="widget-content">
                <div class="padd">
                    <form class="form-horizontal" role="form">
                        <div class="form-group">
                            <label class="col-lg-2 control-label">Ministério</label>
                            <div class="col-lg-5">
                                <input type="text" id="ministerio" class="form-control" placeholder="Ministério">
                            </div>
                        </div>
                        <div class="form-group">
                        <label class="col-lg-2 control-label">ID da Coleta</label>
                        <div class="col-lg-5">
