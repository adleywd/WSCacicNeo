<metal:main use-macro="load: ../basic/master.pt">
    <metal:content fill-slot="dash">
      Lista de Orgão      
    </metal:content>
	<metal:content fill-slot="conteudo">
        <div class="matter">
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <div class="widget">
                            <div class="widget-head">
                                <div class="pull-left">Órgãos</div>
                                 <div class="pull-right"><a href="${request.route_url('orgao')}"><span class="fa fa-plus"></span> Adicionar Orgão</a></div>
                                    <div class="clearfix"></div>
                                    </div>
                                    <div class="widget-content">
                                        <div class="padd">
                                            <div class="page-tables">
                                                <div class="table-responsive">
                                                    <table cellpadding="0" cellspacing="0" border="0" id="data-table" width="100%">
                                                        <thead>
                                                            <tr>
                                                                <th>Nome</th>
                                                                <th>Sigla</th>
                                                                <th>Endereço</th>
                                                                <th>E-mail</th>
                                                                <th>Opções</th>
                                                            </tr>
                                                        </thead>
                                                        <tbody>
                                                            <tr tal:repeat="doc orgao_doc">
                                                                <td>${doc.pretty_name}</td>
                                                                <td>${doc.sigla}</td>
                                                                <td>${doc.endereco}</td>
                                                                <td>${doc.email}</td>
                                                                <td>
                                                                    <a href="${request.route_url('root')}orgao/configuracoes/${doc.sigla}" class="btn btn-xs btn-success" id="create"><i class="fa fa-cogs" title="Configuraçõe ${doc.nome}" ></i></a>
                                                                    <a href="${request.route_url('root')}orgao/editar/${doc.sigla}" title="Alterar Orgão" class="btn btn-xs btn-warning"><i class="fa fa-pencil"></i></a>
                                                                    <a id="confirm_${doc.sigla}" class="btn btn-xs btn-danger" onclick="confirm_delete('${doc.sigla}','${doc.pretty_name}')" title="Apagar Orgão" ><i class="fa fa-times"></i></a>
                                                                </td>
                                                            </tr>
                                                        </tbody>
                                                    </table>
                                                    <div class="clearfix"></div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    <div class="widget-foot">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
    </metal:content>
    <metal:content fill-slot="javascript">
        <script type="text/javascript">
            function confirm_delete(sigla, nome) {
               var answer = confirm("Deseja excluir o orgão: "+nome)
                if (answer == true){
                    x = window.location.href = '${request.route_url('root')}orgao/delete/'+sigla;
                }
            }
        </script>
    </metal:content>
</metal:main>
