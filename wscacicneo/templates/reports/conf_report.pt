<metal:main use-macro="load: ../basic/master.pt">
  <metal:content fill-slot="dash">
      Relatórios      
  </metal:content>
	<metal:content fill-slot="conteudo">
        <div class="padd">
            <br />
            <!-- Form starts.  -->
             <form class="form-horizontal col-lg-8" role="form">
                <div class="form-group">
                  <label class="col-lg-2 control-label">Órgão</label>
                  <div class="col-lg-2">
                    <select style="width: 450px"  id="orgao" class="form-control">
                        <tal tal:condition="request.authenticated_userid" tal:repeat="orgao orgao_doc">
                            <option selected tal:condition="usuario_autenticado.results[0].orgao == orgao.nome" value="${orgao.nome}">${orgao.pretty_name}</option>
                        </tal>
                        <tal tal:condition="not request.authenticated_userid">
                            <option></option>
                        </tal>
                        <option tal:repeat="doc orgao_doc" value="${doc.nome}">${doc.pretty_name}</option>
                    </select>
                  </div>
                </div>
                <div class="form-group">
                  <label class="col-lg-2 control-label">Item</label>
                  <div class="col-lg-2">
                    <select style="width: 450px" id="coleta" class="form-control">
                      <option></option>
                      <option value="processador">Processador</option>
                      <option value="hd">HD</option>
                      <option value="bios">BIOS</option>
                      <option value="memoria">Memoria</option>
                      <option value="so">Sistemas Operacionais</option>
                      <option value="software">Software (Suítes de Escritório)</option>
                    </select>
                  </div>
                </div>
                <div style="margin-left: 28%;">
                    <div class="float-right">
                        <button type="button" id="enviar" class="btn btn-sm btn-primary" style="margin-left: 105px;">Enviar</button>
                        <p id="loading" style="display: none;margin-left: 105px;"><img src="${request.route_url('root')}static/imgs/ajax-loader-circle.gif" />  Aguarde...</p>
                    </div>
                </div>
             </form>
        </div>
	</metal:content>
	<metal:content fill-slot="javascript">
        <script type="text/javascript">
            $(document).ready(function(){

            });
           $('#enviar').click(function(){
                orgao = $('#orgao').val()
                attr = $('#coleta').val()
                if(attr == 'hd'){
                    attr = 'win32_diskdrive'
                    item = 'win32_diskdrive_caption'
                }
                else if(attr == 'bios'){
                    attr = 'win32_bios'
                    item = "win32_bios_manufacturer"
                }
                else if(attr == 'so'){
                    attr = 'operatingsystem'
                    item = 'operatingsystem_caption'
                }
                else if(attr == 'memoria'){
                    attr = 'win32_physicalmemory' 
                    item = 'win32_physicalmemory_memorytype' 
                }
                else if(attr == 'processador'){
                    attr = 'win32_processor'
                    item = 'win32_processor_manufacturer'
                }
                else if(attr == 'software'){
                    $.ajax({
                    type: "GET",
                    beforeSend: function()
                        {
                            $('#loading').show();
                            $('#enviar').hide();
                        },
                    complete: function()
                        {},
                    success:  window.location = "${request.route_url('root')}relatorio/software/"+orgao+"",
                    error: function(){
                                alert('Erro ao gerar os relatórios');
                                $('#loading').hide();
                                $('#enviar').show();
                            }
                });
                }
                else{
                    noty({text: 'Erro: Selecione um órgão e um item.',layout:'topRight',type:'warning',timeout:3000});
                    return True;
                }

                $.ajax({
                    type: "GET",
                    beforeSend: function()
                        {
                            $('#loading').show();
                            $('#enviar').hide();
                        },
                    complete: function()
                        {
                            $('#loading').hide();
                            $('#enviar').show();
                        },
                    global:false,
                    success:  window.location = "${request.route_url('root')}relatorio/"+orgao+"/"+attr+"/"+item+"",
                    error: function(){ $('#loading').hide(); noty({text: 'Erro ao gerar o relatório',layout:'topRight',type:'error',timeout:3000}); }
                });

           });
        </script>
    </metal:content>
</metal:main>
